<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardviewFoto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="@dimen/foto_card_size"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFotoMascota"
            android:layout_width="@dimen/foto_size"
            android:layout_height="@dimen/foto_size"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/snake"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFotoLikesCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="15"/>

            <ImageView
                android:id="@+id/ivHuesoDorado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_48_likes_count"
                android:layout_gravity="left"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
